@model IEnumerable<Cars>

@foreach (var cars in Model)
{
<div class="card mb-3">
    <div class="row no-gutter">
        <div class="col-md-3">
            <img src="~/img/@cars.ImageUrl" alt="@cars.Description" class="card-img">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@cars.Id" >
                    @cars.Name </a>
                <p class="card-text">
                   @cars.ShortDescription
                    
                </p>
                <p class="card-text">
                    <small class="text-muted">2019 Model</small>
                </p>
            </div>
        </div>
    </div>
</div>
}
